<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Card style: outlined (1dp stroke), no elevation -->
    <!-- Parent changed to Widget.MaterialComponents.CardView for compatibility with material versions -->
    <style name="Widget.AegisPass.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/md_theme_outline</item>
        <item name="shapeAppearance">@style/ShapeRoundedMedium</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Pill-shaped primary button -->
    <style name="Widget.AegisPass.PillButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Text appearances tuned for Glass-Material look. Use Inter/Manrope when available; fall back to sans-serif. -->
    <style name="TextAppearance.AegisPass.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="TextAppearance.AegisPass.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

</resources>